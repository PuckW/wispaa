{% set limit = 150 %}

{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}


{% set status = 'follow' %}
{% set text = 'Follow +' %}
{% if not _User.isGuset() and _User.isUserFollowing('blog', article.blog['id'])%}
    {% set status = 'unfollow' %}
    {% set text = 'Following -' %}
{% endif %}




<!-- used to index each article as we loop over throughout the template -->
{% set articleCount = 0 %}

{# blogInfo.title #}
    
    
        <section class="home-page-content">
            <div class="container section">
                <div class="row header">
                    <div class="col-sm-12">
                        <h1>{{blogInfo.title | upper}}</h1>
                    </div>
                </div>


                


                <div class="row">
                    

                    <div class="col-sm-12 col-md-8 main-content">
 
                        {% for i in 0..149 %}
                            {% if articles[articleCount] %}                                                                
                                {{this.render('partials/_single-article.twig', {article: articles[articleCount], position: (articleCount+1), containerClass: 'card-sm col-sm-4'}) | raw}}

                                {% set articleCount = articleCount + 1 %}
                            {% endif %}
                        {% endfor %}



                    </div><!-- .col-sm-8-->





                    
            </div><!-- .container-->
        </section><!-- .home-page-content-->



