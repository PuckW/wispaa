{{ set(this, 'title', 'User Articles') }}
{% set user = _User.getUser()%}
{% set networkData = _Network.getNetworkData() %}

{{this.registerJs("UserArticlesController.load()")}}
<div class="userProfilePost_page">
    <section class="container">
        <div class="row">
            <!-- Begin User Profile Sidebar -->
            <div class="col-sm-12 col-xs-12">
                <header class="sub-header">My Picks</header>
                <div id="news-posts">
                    <div class="section__content">
                        <div class="row">
                            <div id="userArticleContainer" data-total-count="{{totalArticles}}" data-offset="0">
                                {% if userArticles | length > 0  %}
                                    {% set i = 0 %}
                                    {% for article in userArticles %} 
                                        {{this.render('partials/_single-article.twig',   {article: article, 'position': (i+1), containerClass: 'col-sm-4 card-sm-pick'}) | raw}}
                                        {%  set i = i + 1 %}
                                    {% endfor %}
                                {% else %}
                                    <p class="no-data ">No picks yet.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div id="LoadMoreArticles" class="clearfix" style="clear:both;"></div>
                {% if totalArticles >= limit%}
                    <div class="loader">
                        <span><img width="24" height="24" src="{{networkData.templatePath}}/static/images/loading.svg"></span>
                        <span class="text">please wait<span class="one">.</span><span class="two">.</span><span class="three">.</span></span>
                    </div>
                {% endif %}
            </div>
            <!-- //End User Posts -->
        </div>
    </section>
</div>
